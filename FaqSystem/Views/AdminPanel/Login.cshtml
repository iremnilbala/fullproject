@using FaqSystem.Models
@model User

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Sayfa Arka Planı -->
<div class="bg-overlay position-fixed top-0 start-0 w-100 h-100" style="z-index: -1;background-image:url('../../Assets/ışık.jpg')"></div>

<!-- Giriş Alanı -->
<div class="container d-flex justify-content-center align-items-start min-vh-100 pt-4">
    <div class="card shadow p-4 border-0 rounded-4 bg-white bg-opacity-90" style="width: 100%; max-width: 400px;">
        <div class="text-center mb-3">
            <img src="~/Assets/i.u_logo-blue-en.png" alt="Işık University Logo" class="img-fluid mb-2" style="max-height: 60px;" />
            <h2 class="fw-semibold mb-2" style="color: #263692; font-size: 1.6rem;">Admin Login</h2>
        </div>

        @using (Html.BeginForm("Login", "AdminPanel"))
        {
            <div class="mb-3">
                @Html.LabelFor(x => x.UserName, new { @class = "form-label text-start" })
                @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", placeholder = "Username" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(x => x.Password, new { @class = "form-label text-start" })
                @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Password" })
            </div>

            <button type="submit" class="btn w-100 py-2 fw-semibold shadow-sm btn-custom">Login</button>
        }

        <div class="mt-3 text-center">
            <a href="@Url.Action("Index", "Home")" class="small">← Back to Chat</a>
        </div>
    </div>
</div>

<!-- Footer -->
<footer class="text-white text-center py-2 fixed-bottom" style="background-color: #0d1b4c; font-size: 0.875rem;">
    © @DateTime.Now.Year Işık University – Admin Panel | Only authorized personnel may login.
</footer>

<!-- Stil -->
<style>
    /* Arka plan transparan görsel */
  

    .btn-custom {
        background-color: #263692;
        color: white;
        border: none;
        transition: all 0.3s ease-in-out;
    }

        .btn-custom:hover {
            background-color: white;
            color: #263692;
            border: 1px solid #263692;
        }

    .form-control:focus {
        border-color: #263692;
        box-shadow: 0 0 0 0.2rem rgba(38, 54, 146, 0.25);
    }


</style>

<!-- Gerekirse Bootstrap CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
