@using FaqSystem.Models
@model User

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Sayfa Arka Planı -->
<div class="bg-overlay position-fixed top-0 start-0 w-100 h-100" style="z-index: -1;background-image:url('../../Assets/ışık.jpg')"></div>

<!-- Giriş Alanı -->
<div class="container d-flex justify-content-center align-items-start min-vh-100 py-4">
    <div class="card shadow p-4 border-0 rounded-4 bg-white bg-opacity-90" style="width: 100%; max-width: 400px;">
        <div class="text-center mb-3">
            <img src="~/Assets/i.u_logo-blue-en.png" alt="Işık University Logo" class="img-fluid mb-2" style="max-height: 60px;" />
            <h2 class="fw-semibold mb-2" style="color: #263692; font-size: 1.6rem;">Create an account</h2>
        </div>

        @using (Html.BeginForm("Register", "AdminPanel", FormMethod.Post))
        {
            <div class="form-floating mb-3">
                @Html.TextBoxFor(x => x.UserName, new { @class = "form-control w-100", placeholder = "Username", id = "UserName" })
                <label for="UserName">@Html.DisplayNameFor(x => x.UserName)</label>
                @Html.ValidationMessageFor(x => x.UserName, "", new { @class = "text-danger small" })
            </div>

            <div class="form-floating mb-3">
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control w-100", placeholder = "Name", id = "Name" })
                <label for="Name">@Html.DisplayNameFor(x => x.Name)</label>
                @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger small" })
            </div>

            <div class="form-floating mb-3">
                @Html.TextBoxFor(x => x.Surname, new { @class = "form-control w-100", placeholder = "Surname", id = "Surname" })
                <label for="Surname">@Html.DisplayNameFor(x => x.Surname)</label>
                @Html.ValidationMessageFor(x => x.Surname, "", new { @class = "text-danger small" })
            </div>

            <div class="form-floating mb-3">
                @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control w-100", placeholder = "PhoneNumber", id = "PhoneNumber" })
                <label for="PhoneNumber">@Html.DisplayNameFor(x => x.PhoneNumber)</label>
                @Html.ValidationMessageFor(x => x.PhoneNumber, "", new { @class = "text-danger small" })
            </div>

            <div class="form-floating mb-3 position-relative">
                @Html.PasswordFor(x => x.Password, new { @class = "form-control w-100", placeholder = "Password", id = "Password" })
                <label for="Password">@Html.DisplayNameFor(x => x.Password)</label>
                <span onclick="togglePassword('Password', this)" class="position-absolute top-50 end-0 translate-middle-y me-3 text-secondary" style="cursor: pointer;">
                    <i class="fa-solid fa-eye" id="icon-Password"></i>
                </span>
            </div>

            <div class="form-floating mb-4 position-relative">
                @Html.PasswordFor(x => x.PasswordConfirmation, new { @class = "form-control w-100", placeholder = "Password Confirmation", id = "PasswordConfirmation" })
                <label for="PasswordConfirmation">@Html.DisplayNameFor(x => x.PasswordConfirmation)</label>
                <span onclick="togglePassword('PasswordConfirmation', this)" class="position-absolute top-50 end-0 translate-middle-y me-3 text-secondary" style="cursor: pointer;">
                    <i class="fa-solid fa-eye" id="icon-PasswordConfirmation"></i>
                </span>
                @Html.ValidationMessageFor(x => x.PasswordConfirmation, "", new { @class = "text-danger small" })
            </div>

            <button type="submit" class="btn w-100 py-2 fw-semibold shadow-sm" style="background-color: #263692; color: white; border: none;">
                Submit
            </button>


            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

        }

        <div class="mt-3 text-center">
            <a href="@Url.Action("Index", "Home")" class="small">← Back to Chat</a>
        </div>
    </div>
</div>

<!-- Footer -->
<footer class="text-white text-center py-2 fixed-bottom" style="background-color: #0d1b4c; font-size: 0.875rem;">
    © @DateTime.Now.Year Işık University – Register | Only authorized personnel may login.
</footer>

<!-- Stil -->
<style>

    body {
        background: linear-gradient(to right, #eef1f7, #f8f9fc);
        box-sizing: border-box;
    }


    .form-control:focus {
        border-color: #263692;
        box-shadow: 0 0 0 0.25rem rgba(38, 54, 146, 0.25);
    }

    .form-control {
        width: 100% !important;
        padding-left: 1rem;
        padding-right: 1rem;
    }

    .form-floating > label {
        padding-left: 1rem;
    }

    .card {
        background-color: #ffffff;
    }

    .btn:hover {
        opacity: 0.95;
    }
</style>

<!-- Göz ikonu JS -->
<script>
    function togglePassword(inputId, iconElement) {
        const input = document.getElementById(inputId);
        const icon = iconElement.querySelector("i");
        if (input.type === "password") {
            input.type = "text";
            icon.classList.remove("fa-eye");
            icon.classList.add("fa-eye-slash");
        } else {
            input.type = "password";
            icon.classList.remove("fa-eye-slash");
            icon.classList.add("fa-eye");
        }
    }
</script>

